# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cpbc_volunteers

# JWT Secret for admin auth
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# AWS SES (for email notifications)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
SES_SENDER_EMAIL=noreply@crosspointbc.org

# Admin notification recipients (comma-separated)
ADMIN_NOTIFICATION_EMAILS=pastor@crosspointbc.org

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# SMTP (for password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@crosspointbc.org
